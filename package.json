{
  "name": "staging-coordinator",
  "version": "0.2.0",
  "description": "A CLI tool to coordinate staging environment releases with Slack approval workflow",
  "main": "dist/cli/index.js",
  "bin": {
    "staging-coordinator": "dist/cli/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest tests/unit",
    "test:system": "vitest tests/system",
    "type-check": "tsc --noEmit",
    "start": "node dist/cli/index.js",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check --write .",
    "prepublishOnly": "npm run build && npm test && npm run lint"
  },
  "keywords": [
    "cli",
    "staging",
    "deployment",
    "slack",
    "approval",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bun913/staging-coordinator.git"
  },
  "bugs": {
    "url": "https://github.com/bun913/staging-coordinator/issues"
  },
  "homepage": "https://github.com/bun913/staging-coordinator#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@googleapis/sheets": "^10.0.1",
    "@slack/web-api": "^7.9.3",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^150.0.1"
  }
}
